{% extends "layout.njk" %}

{% block head %}
  <title>Courses</title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock head %}

{% block content %}

  <div id="wrapper">
    <h1>Courses</h1>

    <div class="cards">

      <div class="card" id="starter">
        <div class="logo">
          <img src="https://skylab.rocketseat.com.br/static/64c237ccff807c054339a62d53b4b402.svg" alt="starter">
        </div>
        <h3>Starter</h3>
        <div class="card-content">
          <p>5 modules</p>
          <p class="price">Free</p>
        </div>
      </div>

      <div class="card" id="launchbase">
        <div class="logo">
          <img src="https://skylab.rocketseat.com.br/static/0828532024cb46921a6b5e941f8d788d.svg" alt="starter">
        </div>
        <h3>Launchbase</h3>
        <div class="card-content">
          <p>12 modules</p>
          <p class="price">Paid</p>
        </div>
      </div>

      <div class="card" id="gostack">
        <div class="logo">
          <img src="https://skylab.rocketseat.com.br/static/83a178a0653dab1d55e2ed7946465975.svg" alt="starter">
        </div>
        <h3>GoStack</h3>
        <div class="card-content">
          <p>18 modules</p>
          <p class="price">Paid</p>
        </div>
      </div>

    </div>
  </div>

  <div class="modal-overlay">
    <div class="modal">
      <div class="modal-buttons">
        <i id="toggle-screen" class="material-icons">aspect_ratio</i>
        <i id="modal-close" class="material-icons">close</i>
      </div>
      <div class="modal-content">
        <iframe src="" frameborder="0"></iframe>
      </div>
    </div>
  </div>

  <script src="/script.js"></script>
  
{% endblock content %}
