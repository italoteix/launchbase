{% extends "layout.njk" %}

{% block head %}
  <title>Courses</title>
{% endblock head %}

{% block content %}

  <div id="wrapper">
    <h1>Courses</h1>

    <div class="cards">

      {% for item in items %}

      <div class="card" id="{{ item.id }}">
        <div class="logo">
          <img src="https://skylab.rocketseat.com.br/static/{{ item.imageId }}.svg" alt="{{ item.name }}">
        </div>
        <h3>{{ item.name }}</h3>
        <div class="card-content">
          <p>{{ item.modules }} modules</p>
          <p class="price">{{ item.price }}</p>
        </div>
      </div>

      {% endfor %}

    </div>
  </div>

  <script src="/script.js"></script>
  
{% endblock content %}
