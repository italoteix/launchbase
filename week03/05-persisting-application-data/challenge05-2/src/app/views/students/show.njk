{% extends 'layout.njk' %}

{% block content %}
  <div class="card">
    <section class="avatar" style="background: url({{ student.avatar_url }}) no-repeat center center / cover"></section>
    <section class="details">
      <h3>Details</h3>

      <div class="item">
        <div>Name</div>
        <div>{{ student.name }}</div>
      </div>

      <div class="item">
        <div>Email</div>
        <div>{{ student.email }}</div>
      </div>

      <div class="item">
        <div>Age</div>
        <div>{{ student.age }}</div>
      </div>

      <div class="item">
        <div>School Year</div>
        <div>{{ student.school_year }}</div>
      </div>

      <div class="item">
        <div>Hours per week</div>
        <div>{{ student.hpw }}</div>
      </div>

      <a class="button" href="/students/{{ student.id }}/edit">Edit</a>
    </section>
  </div>
{% endblock content %}
