{% extends 'layout.njk' %}

{% block content %}
  <div class="card">
    <section class="avatar" style="background: url({{ member.avatar_url }}) no-repeat center center / cover"></section>
    <section class="details">
      <h3>Details</h3>

      <div class="item">
        <div>member</div>
        <div>{{ member.name }}</div>
      </div>

      <div class="item">
        <div>member</div>
        <div>{{ member.email }}</div>
      </div>

      <div class="item">
        <div>Birthday</div>
        <div>{{ member.birth }}</div>
      </div>

      <div class="item">
        <div>Genre</div>
        <div>{{ "Masculino" if member.gender == "M" else "Feminino" }}</div>
      </div>

      <div class="item">
        <div>Blood type</div>
        <div>{{ member.blood }}</div>
      </div>

      <div class="item">
        <div>Weight (Kg)</div>
        <div>{{ member.weight }}</div>
      </div>

      <div class="item">
        <div>Height (cm)</div>
        <div>{{ member.height }}</div>
      </div>

      <a href="/members/{{ member.id }}/edit" class="button">Editar</a>

    </section>
  </div>
{% endblock content %}
