{% extends 'layout.njk' %}

{% block content %}
  <div class="card">
    <section class="avatar" style="background: url(https://source.unsplash.com/collection/8684183/500x500) no-repeat center center / cover"></section>
    <form method="POST" action="/teachers/create" class="details">
      <h3>Details</h3>

      <div class="item">
        <div>Avatar URL</div>
        <div>
          <input name="avata_url" type="url" placeholder="https://">
        </div>
      </div>

      <div class="item">
        <div>Name</div>
        <div>
          <input type="text" name="name" placeholder="Your name">
        </div>
      </div>

      <div class="item">
        <div>Birth</div>
        <div>
          <input type="date" name="birth">
        </div>
      </div>

      <div class="item">
        <div>Educational Background</div>
        <div>
          <select name="educational_background">
            <option value="high">High School</option>
            <option value="college">College</option>
            <option value="master">Master Degree</option>
            <option value="doctor">Doctorate Degree</option>
          </select>
        </div>
      </div>

      <div class="item">
        <div>Class Type</div>
        <div>
          <span><input type="radio" name="class_type" value="inclass">In-class</span>
          <span><input type="radio" name="class_type" value="online">Online</span>
        </div>
      </div>

      <div class="item">
        <div>Subjects</div>
        <div>
          <input type="text" name="subjects" placeholder="Separete subjects with comma" >
        </div>
      </div>

      <div class="item">
        <input type="submit">
      </div>
    </form>
  </div>
{% endblock content %}
